---
import Button from './global/Button.astro'
import { Icon } from 'astro-icon/components'
---

<active-color class="active-color-wrapper">
	<div class="active-color-preview"></div><Button
		disabled
		ariaLabel="add the color to the color palette"
		classList="button-add-active-color ">Add Color<Icon name="add" class="icon" /></Button
	>
</active-color>
<script>
	class ActiveColorGroup extends HTMLElement {
		constructor() {
			super()
		}
	}
	customElements.define('active-color', ActiveColorGroup)
</script>

<style lang="scss">
	.active-color-wrapper {
		@apply relative flex h-11 items-center gap-4 border-t  border-neutral-300 pt-3;
	}

	.button-disabled {
		@apply absolute bottom-0 right-0 min-w-full;
	}

	.active-color-preview {
		@apply h-7 w-full flex-shrink rounded-md  shadow-sm transition-all;
	}

	// .icon {
	// 	@apply ml-1.5 h-3 w-3 p-0;
	// }
</style>
